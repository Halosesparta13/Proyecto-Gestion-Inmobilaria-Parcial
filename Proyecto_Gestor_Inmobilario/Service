using Proyecto_Gestor_Inmobilario.entidades;
using Proyecto_Gestor_Inmobilario.repositorio;
using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Proyecto_Gestor_Inmobilario.service
{
    public class InmobiliarioServicio
    {
        private InmobiliarioRepositorio inmobiliarioRepositorio = new InmobiliarioRepositorio();

        //Registrar
        public bool Registrar(Inmobiliario inmobiliario)
        {
            if (inmobiliarioRepositorio.Existe(inmobiliario.NombrePropiedad))
            {
                return false;
            }
            else
            {
                inmobiliarioRepositorio.Registrar(inmobiliario);
                return true;
            }
        }
        //Eliminar
        public void Eliminar(string codigo)
        {
            inmobiliarioRepositorio.Eliminar(codigo);
        }
        //Listar Todo
        public List<Inmobiliario> ListarTodo()
        {
            return InmobiliarioRepositorio.ListarTodo();
        }
        //Limpiar la Lista 
        internal void LimpiarLista()
        {
            inmobiliarioRepositorio.LimpiarLista();
        }
    }
}
